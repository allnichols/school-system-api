type Course {
    id: ID!
    courseName: String!
    gradeLevel: Int!
    teacher: Teacher
}

type Query {
    getAllCourses: [Course]
    getCourseById(id: ID!): Course
}

input CourseInput {
    courseName: String!
    gradeLevel: Int!
    teacherId: ID
}

input CourseUpdateInput {
    courseName: String
    gradeLevel: Int
    teacherId: ID
}

type Mutation {
    createCourse(course: CourseInput!): Course
    updateCourse(id: ID!, course: CourseUpdateInput!): Course
}